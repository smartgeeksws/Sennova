<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivUrlCultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvNombreCultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ivUrlCultivo"
        android:layout_marginStart="110dp"
        android:text="cultivo" />

    <TextView
        android:id="@+id/tvDescripcionCultivo"
        android:layout_width="192dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvNombreCultivo"
        android:layout_marginTop="44dp"
        android:text="Desipcion: esta es una breve descripcion de lo que va en el main de cultivos" />
</RelativeLayout>